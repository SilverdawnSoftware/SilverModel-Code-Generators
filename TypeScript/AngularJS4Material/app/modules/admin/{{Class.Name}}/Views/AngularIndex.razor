@using SilvaDawn.SilvaModel.UML.Extensions;
@using SilvaDawn.SilvaModel.UML.Interfaces.Classes;
@using SilvaDawn.SilvaModel.UML.Classes;
<!-- ALLOWOVERWRITE -->

<div class="app-datatable">
<ngx-datatable
  class='material'
  [rows]='rows'
  [columnMode]="'force'"
  [headerHeight]="50"
  [footerHeight]="50"
  [rowHeight]="40"
  [scrollbarV]="true"
  [limit]="10"
  (page)="onPage($event)" style="width: 100%; height: 100%; position: relative" >
  @foreach (var att in Model.Classifier.AllAttributes()) 	{
  <text><ngx-datatable-column name="@att.Name" width="300"></ngx-datatable-column></text> 
  }
  
  <ngx-datatable-column name="Edit" width="300" prop="@(GetPrimaryKey(Model.Classifier).LowerFirst())">
      <ng-template let-value="value" ngx-datatable-cell-template>
      <button md-icon-button	routerLink="/admin/user/edit/{{value}}" color="primary"><md-icon>edit</md-icon></button>

    </ng-template>
    </ngx-datatable-column>
    <ngx-datatable-column name="Delete" width="300" prop="@(GetPrimaryKey(Model.Classifier).LowerFirst())">
      <ng-template let-value="value" ngx-datatable-cell-template>
        <button md-icon-button	(click)="delete(value)" color="warn"><md-icon>delete</md-icon></button>

      </ng-template>
    </ngx-datatable-column>
  
  
</ngx-datatable>

<a md-raised-button color="primary" href="/admin/@Model.Classifier.Name.LowerFirst()/add">Add @(Model.Classifier.Name)</a>

</div>





@functions{

string GetPrimaryKey(IClassifier iClass)
{
	foreach (var att2 in iClass.Attributes())
   	{
		if (att2["Database General Metadata","Primary Key"]=="True")
		 return att2.Name;
	}
	
	return "";
}

string GetDescriptor(IClassifier iClass)
{
	foreach (var att2 in iClass.Attributes())
   	{
		if (att2["Database General Metadata","Default Descriptor"]=="True")
		 return att2.Name;
	}
	
	return "";
}

}