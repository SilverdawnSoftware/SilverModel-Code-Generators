@:            {
@:                 LogFactory.GetLogger().Log(LogLevel.Error,e);
@:                 return new ContentResult() { StatusCode = 500, Content = "Fatal API Error", ContentType = "text/plain" };     
@:            } 
@:        }
       			break;
       			case "PUT":       			
