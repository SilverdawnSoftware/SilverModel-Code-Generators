@using System;
@using System.Collections.Generic;
@using System.Linq;
@using SilverDawn.SilverModel.UML.Extensions;
@using SilverDawn.SilverModel.UML.Interfaces.Classes;
@using SilverDawn.SilverModel.UML.Classes;

@@model @{@Model.Diagram.dName}.@{@Model.Classifier.Name}


@@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>@{@Model.Classifier.Name}</h4>
    <hr />
    <dl class="dl-horizontal">
    @foreach (var att in Model.Classifier.Attributes())
    	{
        <dt>
            @@Html.DisplayNameFor(model => model.@att.Name)
        </dt>
}
      

    </dl>
</div>
<p>
    @@Html.ActionLink("Edit", "Edit", new { id = Model.@Model.Classifier.Attributes().First().Name }) |
    @@Html.ActionLink("Back to List", "Index")
</p>
