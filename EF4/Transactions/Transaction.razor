	    		{
					var refclass=(IClass)Model.RazorSupport.GetElement(att.DataType);	    		
	    			foreach (var att2 in refclass.AllProperties())
			    	{
			    		if (att2["EF4","Default Descriptor"]=="True")
			    		{
			    			<text>result.</text>@refclass.Name@att2.Name@:= item.@refclass.Name.@att2.Name;
			    		}
			    		if (att2["EF4","EF Primary Key"]=="True")
			    		{
			    		   <text>result.</text>@refclass.Name@att2.Name@:= item.@refclass.Name.@att2.Name;
			    		 
			    		}
			    	}
	    		}
	    	}
	    	else
	    	{
	    	if (att["EF4","EF Primary Key"]=="True")
			    		{
			    		}
			    		else
			    		{
	    	<text>new</text>@(Model.Classifier.Name)<text>.</text>@(att.Name) @:= update.@att.Name;   	
	    	}
	    	}    	
    		
    	}
    	
    		db.@(Model.Classifier.Name)s.Add(new@(Model.Classifier.Name));
    		
    		return new@(Model.Classifier.Name);
            }
            
             catch (Exception)
            {
                return null;
              
            }
        }

 		// Delete Transaction Code
 		public async Task Delete(@(Model.Classifier.Name)Delete delete)
        {
            using (var db = new data.CompareEngineDbContext())
            {
                await Delete(db,delete);
                await db.SaveChangesAsync();
                
            }
        } 	
 	
 	
 	 public async Task Delete(data.CompareEngineDbContext db, @(Model.Classifier.Name)Delete delete)
        {
         try
            {
            
              var @(Model.Classifier.Name.LowerFirst())ToDelete = await db.@(Model.Classifier.Name)s.FirstOrDefaultAsync(w => w.@GetPrimaryKey(Model.Classifier) == delete.@GetPrimaryKey(Model.Classifier));
            
             	db.@(Model.Classifier.Name)s.Remove(@(Model.Classifier.Name.LowerFirst())ToDelete);    		
    		}
             catch (Exception)
            {
            }
        }
	}
 }
 
 @functions {
    public static string GetPrimaryKey(IClassifier umlClass)
    {
    	foreach (var att in umlClass.AllProperties())
		{
			if (att["EF4","EF Primary Key"]=="True")
			{
				return att.Name;
			}
		}
    	
    	return "";
    }
 }